@import "../lib/cw.wxss";

.box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
}
.window {
  width: 50%;
  padding: 20rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 20rpx;
}
.text {
  color: #fff;
  text-align: center;
}
page{
  background: #f2f2f2;
}
.logo image{
  height: 300rpx;
  width:100%;
}
.user,.password,.code,.option{
  background: #fff;
  display:flex;
  height: 80rpx;
  margin-bottom: 5px;
  border-radius: 2px;
}
.option{
  font-size: 12px;
}
.login{
  padding:20px 15px;
}
.login image{
  height:22px;
  width:22px;
  margin:20rpx 23rpx;
}
.password image{
  height: 19px;
  width:19px;
  margin:20rpx 23rpx;
}
input{
  height: 80rpx;
  line-height: 80rpx;
}
.code{
  width:600rpx;
  position:relative;
}
.code button{
  position: absolute;
  right:8px;
  top:5px;
  height:60rpx;
  width:100rpx;
  padding:0;
  margin:0;
  line-height: 58rpx;
  font-size: 13px;
  background: rgba(0, 0, 0, .5);
  color: #fff;
}
